<mapping>

    <class name="org.homegrown.domain.Games">

        <map-to xml="boardgames"/>

        <field name="games" type="org.homegrown.domain.Games" collection="arraylist">
            <bind-xml name="boardgame" node="element"/>
        </field>

    </class>

    <class name="org.homegrown.domain.BggGame">
    
        <field name="gameTitle" type="string">
            <bind-xml name="name" node="element" />
        </field>

    </class>

</mapping>